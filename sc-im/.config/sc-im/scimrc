# ===== COLORSCHEME ===== {{{

redefine_color "RED"     255 0   0
redefine_color "GREEN"   37  142 112
redefine_color "YELLOW"  212 175 55
redefine_color "BLUE"    52  142 199
redefine_color "MAGENTA" 126 78  172
redefine_color "CYAN"    121 207 184
redefine_color "WHITE"   255 255 255

define_color "pomu"   37  142 112
define_color "finana" 121 207 184
define_color "elira"  149 200 216
define_color "petra"  255 174 66
define_color "rosemi" 152 195 121
define_color "selen"  126 78  172
define_color "nina"   255 0   0
define_color "enna"   133 142 209
define_color "millie" 254 188 135
define_color "reimu"  185 11  74
define_color "luca"   212 175 55
define_color "vox"    150 0   24
define_color "mysta"  195 85  43
define_color "ike"    52  142 199
define_color "shu"    166 96  167
define_color "background"     40  44  52

color "type=HEADINGS          fg=ike bg=finana"
color "type=HEADINGS_ODD      fg=ike bg=elira"
color "type=MODE              fg=enna bg=DEFAULT_COLOR"
color "type=NUMB              fg=DEFAULT_COLOR bg=background"
color "type=STRG              fg=DEFAULT_COLOR bg=background"
color "type=DATEF             fg=DEFAULT_COLOR bg=background"
color "type=EXPRESSION        fg=shu bg=background"
color "type=GRID_EVEN         fg=DEFAULT_COLOR bg=background"
color "type=GRID_ODD          fg=DEFAULT_COLOR bg=background"
color "type=CELL_ERROR        fg=nina bg=background"
color "type=CELL_NEGATIVE     fg=DEFAULT_COLOR bg=background"
color "type=CELL_SELECTION    fg=DEFAULT_COLOR bg=pomu"
color "type=CELL_SELECTION_SC fg=DEFAULT_COLOR bg=enna"
# the selected cell highlight color
color "type=INFO_MSG          fg=DEFAULT_COLOR bg=background"
# if you paste in visual mode
color "type=ERROR_MSG         fg=nina bg=background"
color "type=CELL_ID           fg=petra bg=background"
color "type=CELL_FORMAT       fg=luca bg=background"
color "type=CELL_CONTENT      fg=DEFAULT_COLOR bg=background"
color "type=WELCOME           fg=enna bg=background"
color "type=NORMAL            fg=DEFAULT_COLOR bg=background"
color "type=INPUT             fg=enna bg=selen"
color "type=HELP_HIGHLIGHT    fg=DEFAULT_COLOR bg=selen"

# }}}

# ===== BINDINGS ===== {{{
imap "jk" "<Esc>"
nmap "cb" ":cellcolor \"fg=DEFAULT_COLOR bg="
# }}}
